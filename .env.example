# Polymarket Execution Configuration
# Copy this file to .env and fill in your values

# Your private key (without 0x prefix)
# WARNING: Never share this or commit it to git!
PRIVATE_KEY=your_private_key_here

# Your Polymarket profile/funder address
# This is the address shown on your Polymarket profile
FUNDER_ADDRESS=0xYourPolymarketProfileAddress

# Signature type:
# 0 = EOA (direct trading from private key wallet)
# 1 = Magic/Email wallet (Polymarket email login)
# 2 = Browser wallet (MetaMask, Coinbase Wallet, etc.)
SIGNATURE_TYPE=1

# Maximum position size in USD per arbitrage trade
MAX_POSITION_SIZE=100

# Set to "true" to simulate trades without executing
DRY_RUN=true

# Minimum profit per share to trigger a trade (in USD)
MIN_PROFIT=0.005

# Minimum market liquidity to consider (in USD)
MIN_LIQUIDITY=1000

# Telegram Notifications (optional)
# Create a bot with @BotFather and get your chat ID from @userinfobot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
